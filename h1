<body>
    <h1>CSS Flexbox Examples</h1>
    <p>This page demonstrates all CSS Flexbox properties with examples.</p>

    <!-- Display: Flex -->
    <section>
        <h2>1. display: flex</h2>
        <p>Defines a flex container.</p>
        <div class="container display-flex">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
        </div>
    </section>

    <!-- Flex-Direction -->
    <section>
        <h2>2. flex-direction</h2>
        <p>Defines the direction of the main axis.</p>
        <h3>Row</h3>
        <div class="container flex-direction-row">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
        </div>
        <h3>Column</h3>
        <div class="container flex-direction-column">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
        </div>
    </section>

    <!-- Flex-Wrap -->
    <section>
        <h2>3. flex-wrap</h2>
        <p>Specifies whether flex items should wrap.</p>
        <div class="container flex-wrap-wrap">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
            <div class="item">Item 4</div>
            <div class="item">Item 5</div>
        </div>
    </section>

    <!-- Flex-Flow -->
    <section>
        <h2>4. flex-flow</h2>
        <p>Shorthand for flex-direction and flex-wrap.</p>
        <div class="container flex-flow-column-wrap">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
        </div>
    </section>

    <!-- Justify-Content -->
    <section>
        <h2>5. justify-content</h2>
        <p>Aligns flex items along the main axis.</p>
        <h3>Space Between</h3>
        <div class="container justify-content-space-between">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
        </div>
        <h3>Center</h3>
        <div class="container justify-content-center">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
        </div>
        <h3>Space Around</h3>
        <div class="container justify-content-space-around">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
        </div>
        <h3>Space Evenly</h3>
        <div class="container justify-content-space-evenly">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
        </div>
    </section>

    <!-- Align-Items -->
    <section>
        <h2>6. align-items</h2>
        <p>Aligns flex items along the cross axis.</p>
        <h3>Center</h3>
        <div class="container align-items-center">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
        </div>
        <h3>Stretch</h3>
        <div class="container align-items-stretch">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
        </div>
        <h3>Flex Start</h3>
        <div class="container align-items-flex-start">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
        </div>
        <h3>Flex End</h3>
        <div class="container align-items-flex-end">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
        </div>
        <h3>Baseline</h3>
        <div class="container align-items-baseline">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
        </div>
    </section>

    <!-- Align-Content -->
    <section>
        <h2>7. align-content</h2>
        <p>Aligns flex lines when there is extra space in the cross axis.</p>
        <h3>Space Between</h3>
        <div class="container align-content-space-between">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
            <div class="item">Item 4</div>
            <div class="item">Item 5</div>
            <div class="item">Item 6</div>
        </div>
        <h3>Center</h3>
        <div class="container align-content-center">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
            <div class="item">Item 4</div>
            <div class="item">Item 5</div>
            <div class="item">Item 6</div>
        </div>
        <h3>Space Around</h3>
        <div class="container align-content-space-around">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
            <div class="item">Item 4</div>
            <div class="item">Item 5</div>
            <div class="item">Item 6</div>
        </div>
        <h3>Space Evenly</h3>
        <div class="container align-content-space-evenly">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
            <div class="item">Item 4</div>
            <div class="item">Item 5</div>
            <div class="item">Item 6</div>
        </div>
        <h3>Stretch</h3>
        <div class="container align-content-stretch">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
            <div class="item">Item 4</div>
            <div class="item">Item 5</div>
            <div class="item">Item 6</div>
        </div>
        <h3>Flex Start</h3>
        <div class="container align-content-flex-start">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
            <div class="item">Item 4</div>
            <div class="item">Item 5</div>
            <div class="item">Item 6</div>
        </div>
        <h3>Flex End</h3>
        <div class="container align-content-flex-end">
            <div class="item">Item 1</div>
            <div class="item">Item 2</div>
            <div class="item">Item 3</div>
            <div class="item">Item 4</div>
            <div class="item">Item 5</div>
            <div class="item">Item 6</div>
        </div>
    </section>

    <!-- Order -->
    <section>
        <h2>8. order</h2>
        <p>Controls the order of flex items.</p>
        <div class="container order-demo">
            <div class="item" style="order: 3;">Item 1 (order: 3)</div>
            <div class="item" style="order: 1;">Item 2 (order: 1)</div>
            <div class="item" style="order: 2;">Item 3 (order: 2)</div>
        </div>
    </section>

    <!-- Flex-Grow -->
    <section>
        <h2>9. flex-grow</h2>
        <p>Defines how much a flex item will grow.</p>
        <div class="container flex-grow-demo">
            <div class="item" style="flex-grow: 1;">Item 1 (grow: 1)</div>
            <div class="item" style="flex-grow: 2;">Item 2 (grow: 2)</div>
            <div class="item" style="flex-grow: 1;">Item 3 (grow: 1)</div>
        </div>
    </section>

    <!-- Flex-Shrink -->
    <section>
        <h2>10. flex-shrink</h2>
        <p>Defines how much a flex item will shrink.</p>
        <div class="container flex-shrink-demo">
            <div class="item" style="flex-shrink: 1;">Item 1 (shrink: 1)</div>
            <div class="item" style="flex-shrink: 0;">Item 2 (shrink: 0)</div>
            <div class="item" style="flex-shrink: 1;">Item 3 (shrink: 1)</div>
        </div>
    </section>

    <!-- Flex-Basis -->
    <section>
        <h2>11. flex-basis</h2>
        <p>Sets the initial size of a flex item.</p>
        <div class="container flex-basis-demo">
            <div class="item" style="flex-basis: 100px;">Item 1 (basis: 100px)</div>
            <div class="item" style="flex-basis: 200px;">Item 2 (basis: 200px)</div>
            <div class="item" style="flex-basis: 150px;">Item 3 (basis: 150px)</div>
        </div>
    </section>

    <!-- Flex -->
    <section>
        <h2>12. flex</h2>
        <p>Shorthand for flex-grow, flex-shrink, and flex-basis.</p>
        <div class="container flex-demo">
            <div class="item" style="flex: 1 1 100px;">Item 1 (flex: 1 1 100px)</div>
            <div class="item" style="flex: 2 1 200px;">Item 2 (flex: 2 1 200px)</div>
            <div class="item" style="flex: 1 1 150px;">Item 3 (flex: 1 1 150px)</div>
        </div>
    </section>

    <!-- Align-Self -->
    <section>
        <h2>13. align-self</h2>
        <p>Allows individual flex items to override align-items.</p>
        <div class="container align-self-demo">
            <div class="item">Item 1</div>
            <div class="item" style="align-self: flex-end;">Item 2 (align-self: flex-end)</div>
            <div class="item">Item 3</div>
        </div>
    </section>
