        .align-items-flex-start {
            align-items: flex-start;
            height: 150px;
        }

        .align-items-flex-end {
            align-items: flex-end;
            height: 150px;
        }

        .align-items-baseline {
            align-items: baseline;
            height: 150px;
        }

        /* Align-content */
        .align-content-space-between {
            align-content: space-between;
            flex-wrap: wrap;
            height: 200px;
        }

        .align-content-center {
            align-content: center;
            flex-wrap: wrap;
            height: 200px;
        }

        .align-content-space-around {
            align-content: space-around;
